<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="20dp"
        android:paddingHorizontal="18dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jadwal Pelatihan yang Disediakan"
            android:fontFamily="@font/inter_medium"
            android:textSize="14sp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pilih Jadwal"
            android:fontFamily="@font/inter_regular"
            android:textSize="10dp"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="22dp">

            <androidx.cardview.widget.CardView
                android:layout_width="61dp"
                android:layout_height="30dp"
                app:cardBackgroundColor="@color/grey"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp"
                android:layout_marginRight="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tersedia"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="61dp"
                android:layout_height="30dp"
                app:cardBackgroundColor="@color/secondaryYellow"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp"
                android:layout_marginRight="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dipilih"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/lapangan1"
            android:layout_width="323dp"
            android:layout_height="40dp"
            android:layout_marginBottom="13.5dp"
            app:cardBackgroundColor="@color/grey"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp">

                <TextView
                    android:id="@+id/tv_lapangan1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/inter_regular"
                    android:text="Pagi, pukul 08.00 - 10.00"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_user_pelatihan"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5/20"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="10sp"
                    android:textColor="@color/black"/>




            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/lapangan2"
            android:layout_width="323dp"
            android:layout_height="40dp"
            app:cardBackgroundColor="@color/grey"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="13.5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp">

                <TextView
                    android:id="@+id/tv_lapangan2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/inter_regular"
                    android:text="Siang, pukul 12.00 - 14.00"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_user_pelatihan"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9/20"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="10sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/lapangan3"
            android:layout_width="323dp"
            android:layout_height="40dp"
            app:cardBackgroundColor="@color/grey"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp">

                <TextView
                    android:id="@+id/tv_lapangan3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/inter_regular"
                    android:text="Sore, pukul 15.00 - 17.00"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_user_pelatihan"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19/20"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="10sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_pesan_pelatihan"
            android:layout_width="110dp"
            android:layout_height="34dp"
            android:background="@drawable/custom_buton_pilih_jadwal_pelatihan"
            android:stateListAnimator="@null"
            android:elevation="0dp"
            android:text="Daftar Pelatihan"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:fontFamily="@font/inter_bold"
            android:textSize="11dp"
            android:layout_gravity="right"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>